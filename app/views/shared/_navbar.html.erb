<div class="navbar navbar-expand-sm navbar-light navbar-livima">
  <%= link_to "/home", class: "navbar-brand" do %>
    <%= image_tag "livima.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <p id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Opções</p>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Página Inicial", "/home", class: "dropdown-item" %>
            <%= link_to "Quadro de funcionários", employees_path, class: "dropdown-item" %>
            <%= link_to "Adicionar funcionário", new_employee_path, class: "dropdown-item" %>
            <%= link_to "Sair", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Entrar", new_user_session_path, class: "nav-link", id: "log-in-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
